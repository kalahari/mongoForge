{
  "name": "mongo-forge-dev",
  "version": "0.4.0",
  "description": "mongoForge Development Environment",
  "scripts": {
    "clean": "rimraf node_modules typings app/node_modules app/typings",
    "lint": "tsc --listFiles --noEmit | grep -E '^('`pwd`'/)?app/' | xargs tslint",
    "prepublish": "npm run typings && npm run transpile",
    "reinstall": "npm run clean && npm install",
    "transpile": "tsc",
    "typings": "typings install",
    "postinstall": "cd app && npm install",
    "build": "gulp build",
    "release": "gulp release --env=production",
    "start": "node ./tasks/start",
    "test": "npm run lint && node ./tasks/start --env=test",
    "install-native": "node ./tasks/install_native_module"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalahari/mongoForge.git"
  },
  "keywords": [
    "mongodb",
    "electron",
    "angular2",
    "typescript"
  ],
  "author": "Blake Mitchell <blake@barkingspoon.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kalahari/mongoForge/issues"
  },
  "homepage": "https://github.com/kalahari/mongoForge#readme",
  "devDependencies": {
    "asar": "^0.10.0",
    "electron-packager": "^5.2.1",
    "electron-prebuilt": "^0.36.10",
    "electron-rebuild": "^1.1.3",
    "fs-jetpack": "^0.7.0",
    "gulp": "^3.9.0",
    "gulp-less": "^3.0.3",
    "gulp-util": "^3.0.6",
    "q": "^1.4.1",
    "rimraf": "^2.5.2",
    "rollup": "^0.25.4",
    "tree-kill": "^0.1.1",
    "tslint": "^3.4.0",
    "tslint-eslint-rules": "^1.0.1",
    "typescript": "^1.8.7",
    "typings": "^0.6.9",
    "yargs": "^4.2.0"
  },
  "optionalDependencies": {
    "appdmg": "^0.3.2",
    "rcedit": "^0.4.0"
  }
}
